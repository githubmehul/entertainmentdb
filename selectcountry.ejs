<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="view port" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<style>
    @-ms-viewport{
  width: device-width;
}
    .center_button {
        justify-content: center;
        align-items: center;
    }

    .container {
        justify-content: center;
        align-items: center;
        padding: 30%;
    }

    .right-button {
        align-items: right;
    }

    .heading {
        margin: auto;
        width: 24%;
        padding: 20px;
    }
</style>

<body>
    <div class="heading">
        <u>
            <h1>Country Table</h1>
        </u>
    </div>
        <div class="container" align=center>
        <!-- AddActor Reference in Actor Table -->
        <div class="right-button">
            <a href="/openmenu" class="btn btn-primary">Go Back to Main Menu</a><br /><br />
        </div>
        <div class="center_button">
            <a href="/addcountry" class="btn btn-primary">Add Country Record</a><br /><br />
        </div>
                <table class="table table-dark table-hover">
                        <thead>
                                <tr>
                    <th>Country ID</th>
                    <th>Country Name</th>
                                        <th>Last Update</th>
                    <th>Action</th>
                                    
                </tr>
                            </thead>
                        <tbody>
                <!-- Call Function for Each Element in the Table -->
                <% country.forEach(function(count){ %>
                <tr>
                    <td><%= count.country_id %></td>
                    <td><%= count.country %></td>
                    <td><%= count.last_update %></td>
                    <td>
                        <!-- Edit and Delete Statements -->
                        <a href="/editcount?country_id=<%= count.country_id %>" class="btn btn-primary">Edit</a>
                        <a href="/deletecount?country_id=<%= count.country_id %>"
                            onClick="return confirm('Are you Sure!')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                <% }); %>

            </tbody>
        </table>
            
    </div>
</body>

</html>