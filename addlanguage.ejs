<body>
      <div class="container" align=center>
    <u><h2>Add Language Record</h2></u><br>
    <!-- Saving the New Records in Actors Table -->
    <form  method="post">
      <div class="form-group">
        <label for="name">Enter Language Name:</label>
        <input type="text" class="form-control" placeholder="Enter Language Name" name="name" required>
      </div>
      <div class="form-group">
        <label for="last_update">Enter the Last Update:</label>
        <input type="datetime-local" class="form-control" placeholder="Enter Last Update" name="last_update" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit!</button>
    </form>
  </div>
